{
    "version": 9,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 31
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "architecture": {
                "strategy": "external",
                "value": "x64"
            },
            "binaryDir": "${sourceDir}/build/bin/${presetName}",
            "cacheVariables": {
                "VS_INSTALLATION_PATH": "$env{VSINSTALLDIR}",
                "CMAKE_CXX_FLAGS": "/Oi /arch:AVX2 /fp:strict /GR- /GF /sdl /guard:cf /utf-8 /diagnostics:caret /W4 /permissive- /volatile:iso /Zf /Zc:referenceBinding /Zc:rvalueCast /Zc:strictStrings /Zc:templateScope /Zc:inline /Zc:preprocessor /Zc:enumTypes /Zc:lambda /Zc:__cplusplus /Zc:externConstexpr /Zc:throwingNew /EHa- /w14165 /w44242 /w44254 /w44263 /w34265 /w34287 /w44296 /w44365 /w44388 /w44464 /w14545 /w14546 /w14547 /w14549 /w14555 /w34619 /w34640 /w24826 /w14905 /w14906 /w14928 /w45038",
                "CMAKE_EXE_LINKER_FLAGS": "/machine:x64 /guard:cf"
            },
            "toolchainFile": "cmake/Windows.MSVC.toolchain.cmake",
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS": [ "Windows" ]
                }
            }
        },
        {
            "name": "dbg",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "GE_BUILD_CONFIG": "DEBUG",
                "GE_BUILD_ENABLE_TESTS": true,
                "GE_BUILD_ENABLE_MONOLITHIC": false
            }
        },
        {
            "name": "dev",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "GE_BUILD_CONFIG": "DEVELOPMENT",
                "GE_BUILD_ENABLE_TESTS": true,
                "GE_BUILD_ENABLE_MONOLITHIC": false
            }
        },
        {
            "name": "rel",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "GE_BUILD_CONFIG": "RELEASE",
                "GE_BUILD_ENABLE_TESTS": false,
                "GE_BUILD_ENABLE_MONOLITHIC": true
            }
        },
        {
            "name": "win64-dbg-all",
            "inherits": [ "base", "dbg" ]
        },
        {
            "name": "win64-dev-all",
            "inherits": [ "base", "dev" ]
        },
        {
            "name": "win64-rel-all",
            "inherits": [ "base", "rel" ]
        }
    ],
    "buildPresets": [
        {
            "name": "win64-dbg-all",
            "cleanFirst": false,
            "configurePreset": "win64-dbg-all"
        },
        {
            "name": "win64-rel-all",
            "cleanFirst": false,
            "configurePreset": "win64-rel-all"
        },
        {
            "name": "win64-dev-all",
            "cleanFirst": false,
            "configurePreset": "win64-dev-all"
        }
    ]
}